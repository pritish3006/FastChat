# =====================================
# Fast Chat Frontend Configuration
# =====================================
# This is an example configuration file.
# Copy this file to .env.local and modify as needed.
# Do NOT commit your actual .env files to version control!

# =====================================
# API Configuration
# =====================================
# Backend API URL
VITE_API_URL=http://localhost:3001

# =====================================
# Database Configuration (Supabase)
# =====================================
# URL of your Supabase instance
VITE_SUPABASE_URL=http://localhost:54321
# Anonymous key for Supabase client-side access
# Get this from your Supabase project dashboard
VITE_SUPABASE_KEY=your_supabase_anon_key_here

# =====================================
# Feature Flags
# =====================================
# Enable mock API for development without backend
VITE_ENABLE_MOCK_API=false

# =====================================
# UI Configuration
# =====================================
# Default model to select when user first loads app
VITE_DEFAULT_MODEL=llama3
# Theme setting (light, dark, system)
VITE_DEFAULT_THEME=system 